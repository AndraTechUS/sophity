<header>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to surveys_path, class: 'navbar-brand' do %>
          <div class="logo">
              <img src="http://www.sophity.com/wp-content/uploads/2016/07/sophity.png">
          </div>
        <% end %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
        <% if current_user %>
            <li>
              <p class="navbar-text">
                Services Success Health Check - <b> <%= current_user.name %></b>               
                <%= link_to '(change name)', '#', 'data-toggle': 'modal', 'data-target': '#submit-name-modal' %>
              </p>
            </li>
  
        <% else %>
            <%= link_to 'Sophity Healthcheck Report', '#', 'data-toggle': 'modal', 'data-target': '#submit-name-modal' %>
        <% end %>

      </div>
    </div>
  </div>

</header>
